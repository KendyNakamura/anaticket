<h1>新規イベント作成</h1>
  <%= form_for @event, url: events_confirm_path, class: "row" do |f| %>
    <div class="col-lg-6 mt-5">
      <h5><%= f.label :タイトル %></h5>
      <%= f.text_field :title, class: "form-control mb-3" %>
      <h4><%= f.label :内容 %></h4>
      <%= f.text_area :content, class: "form-control mb-3", style: "height:200px;" %>
      <%= f.hidden_field :user_id, value: "#{current_user.id}" %>
      <h5 class="pt-3"><%= f.label :開始日 %></h5>
      <%= raw sprintf(
          f.date_select(
            :start_date,
            class: "form-control",
            use_month_numbers: true,
            start_year: Date.today.year,
            end_year: Date.today.year+1,
            date_separator: '%s',
            datetime_separator: '%s'),
            '年', '月') + '日 ' %>
      <h5 class="pt-3"><%= f.label :開始時間 %></h5>
      <p><%= raw sprintf(
          f.time_select(
            :start_time,
            class: "form-control",
            time_separator: '%s'),
            '時') + '分' %> </p>
      <input name="radio" type="radio" id="free" value="0" checked="checked">無料
      <input name="radio" type="radio" id="toll" value="1">有料
      <div id="persons" class="mt-3">
        <h5><%= f.label :募集人数 %></h5>
        <%= f.number_field :max_persons, class: "form-control", min: 0, max: 999, placeholder: "人数無制限の場合、0にしてください" %>
      </div>
      <div id="ticket">
        <%= f.fields_for :items do |b| %>
          <h5 class="pt-3"><%= f.label :商品名 %></h5>
          <%= b.text_field :name, class: "form-control", value: "チケット" %>
          <h5 class="pt-3"><%= f.label :価格 %>(100円〜9999円)</h5>
          <%= b.number_field :price, class: "form-control", in: 100...10000, value: "3000" %>
          <h5 class="pt-3"><%= f.label :在庫 %>(1個〜100個)</h5>
          <%= b.number_field :count, class: "form-control", in: 1...100, value: "10" %>
          <h5 class="pt-3"><%= f.label :詳細 %></h5>
          <%= b.text_area :content, class: "form-control", placeholder: "商品の内容を記載" %>
        <% end %>
      </div>
      <p class="pt-3"><%= f.check_box :check, id: "check", checked_value: "1", unchecked_value: "0" %>限定公開にする</p>
      <%= f.password_field :password, id: "password", placeholder: "パスワード(4桁以上)" %>
      <%= f.password_field :password_confirmation, id: "passwordConfirmation", placeholder: "確認パスワード" %>
      <span class="input-group-btn align-bottom">
        <%= f.submit class: "btn btn-primary mt-4 float-right", value: "確認画面へ" %>
      </span>
    </div>
  <% end %>
