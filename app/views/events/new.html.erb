<h1>新規イベント作成</h1>
  <%= form_for @event, url: event_path, class: "row" do |f| %>
    <div class="col-lg-6 mt-5">
      <h5><%= f.label :タイトル %></h5>
      <%= f.text_field :title, class: "form-control mb-3" %>
      <h4><%= f.label :内容 %></h4>
      <%= f.text_area :content, class: "form-control mb-3", style: "height:200px;" %>
      <!-- <h5><%= f.label :募集人数 %></h5>
      <%= f.number_field :content, class: "form-control", min: 0, max: 999 %>
      <h5 class="pt-3"><%= f.label :開始日 %></h5>
      <%= f.date_field :content, class: "form-control" %>
      <h5 class="pt-3"><%= f.label :開始時間 %></h5>
      <%= f.time_select :content, class: "form-control" %> <br /> -->
      <p class="pt-3"><%= f.check_box :check, id: "check", checked_value: "1", unchecked_value: "0" %>プライベートにする</p>
      <%= f.password_field :password, id: "password", placeholder: "パスワード(4桁以上)" %>
      <%= f.password_field :password_confirmation, id: "passwordConfirmation", placeholder: "確認パスワード" %>
      <span class="input-group-btn align-bottom">
        <%= f.submit class: "btn btn-primary mt-4 float-right", value: "作成する" %>
      </span>
    </div>
  <% end %>
