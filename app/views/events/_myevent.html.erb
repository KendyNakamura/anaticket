<!-- その人が作成したイベントを表示 -->
<% if myevent.user.id == user_id %>
  <!-- 自分のページの場合、全てのイベントを表示 -->
  <% if myevent.user.id == current_user.id%>
      <div class="border-bottom py-3 row pl-4">
        <div class="col-12 px-2">
          <h4><%= link_to "#{myevent.title}", event_path(myevent) %></h4>
          <%= "制限付き" if myevent.check == "1" %>
        </div>
        <div class="px-3 py-3">
          開始時間
          <%= myevent.start_time %><br />
          終了時間
          <%= myevent.finish_time %>
        </div>
      </div>
  <% else %>
    <!-- 他の人のページは制限なしイベントのみ表示 -->
    <% if myevent.check != "1" %>
      <div class="border-bottom py-3 row pl-4">
        <div class="col-12 px-2">
          <h4><%= link_to "#{myevent.title}", event_path(myevent) %></h4>
        </div>
        <div class="px-3 py-3">
          <%= myevent.content %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
