<h1>トップページ</h1>

<%= link_to "＋イベントを作成する", new_event_path, class: "btn btn-warning mb-3" %><br />

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#top-tab1" class="nav-link active" data-toggle="tab" >全て</a>
  </li>
  <li class="nav-item">
    <a href="#top-tab2" class="nav-link" data-toggle="tab" >有料</a>
  </li>
  <li class="nav-item">
    <a href="#top-tab3" class="nav-link" data-toggle="tab" >無料</a>
  </li>
</ul>

<div class="tab-content">
  <!-- 全て -->
  <div id="top-tab1" class="tab-pane active">
    <p><%= render partial: "event", collection: @events %></p>
  </div>
  <!-- 有料 -->
  <div id="top-tab2" class="tab-pane">
    <p><%= render partial: "event", collection: @events.where(free:'1') %></p>
  </div>
  <!-- 無料 -->
  <div id="top-tab3" class="tab-pane">
    <p><%= render partial: "event", collection: @events.where(free:'0') %></p>
  </div>
</div
